---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
		<title>{title}</title>

		<!-- OG -->
		<!-- TODO: Add OG images and final site URL -->
		<meta property="og:title" content="Contenda Blog Preview" />
		<meta property="og:site_name" content="Contenda Blog Preview" />
		<!-- <meta property="og:url" content="" /> -->
		<meta
			property="og:description"
			content="Preview your Contenda-generated blog posts before publishing them"
		/>
		<meta property="og:type" content="website" />
		<!-- <meta property="og:image" content="" /> -->
		<meta property="twitter:card" content="summary_large_image" />
		<!-- <meta property="twitter:url" content="" /> -->
		<meta property="twitter:title" content="Contenda Blog Preview" />
		<meta
			property="twitter:description"
			content="Preview your Contenda-generated blog posts before publishing them"
		/>
		<!-- <meta
			property="twitter:image"
			content=""
		/> -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<nav>
			<img src="/logo.png" />
			<a href="https://app.contenda.co">Give Contenda a Try!</a>
		</nav>
		<main>
			<slot />
		</main>
	</body>
</html>
<style is:global>
	:root {
		--dark-bg: #171d27;
		--light-bg: #ffffff;
		--blue: #4682b4;
		--green: #6ce385;
		--buttons: #4c5d88;
	}
	html {
		font-family: "Inter", sans-serif;
		background-color: var(--dark-bg);
		margin: 0;
		padding: 0;
	}

	body {
		background-color: var(--light-bg);
		max-width: 56rem;
		margin: 0 auto;
		padding-top: 2.25rem;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		padding: 0 5.5rem;
	}

	nav img {
		width: 156px;
	}

	nav a {
		padding: 0.75rem 1.5rem;
		background: var(--buttons);
		color: white;
		border-radius: 4px;
		font-weight: bold;
		text-transform: uppercase;
		text-decoration: none;
		cursor: pointer;
		transition: background 0.2s ease-in-out;
	}

	nav a:hover {
		background: #35415f;
	}

	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}

	p {
		line-height: 1.6;
	}

	.center {
		text-align: center;
	}

	.blog {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}
	.blog h1 {
		font-size: 2rem;
	}

	.blog img {
		max-width: 100%;
	}

	.small {
		font-size: 0.8rem;
		opacity: 0.5;
	}
</style>
